# Copy this file to `.env` and adjust values for your setup.

# Use SQLite for quick local runs (set to 1 to enable)
# When enabled, Postgres settings are ignored.
USE_SQLITE=0

# Full DATABASE_URL takes precedence over individual vars.
# Default dev DB (matches docker-compose: localhost:54322)
DATABASE_URL=postgresql://postgres:dev_password@localhost:54322/twist_erp_db

# If you prefer individual settings (used by production_settings.py)
# DB_NAME=twist_erp_db
# DB_USER=postgres
# DB_PASSWORD=dev_password
# DB_HOST=localhost
# DB_PORT=54322

# Redis (optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Django
# DEBUG=True
# SECRET_KEY=change-me
# ALLOWED_HOSTS=localhost,127.0.0.1

# AI (optional)
# AI_ENABLED=true
# AI_MODE=full          # full | mock | disabled
# AI_MAX_NEW_TOKENS=256
# AI_MAX_PROMPT_TOKENS=768
# AI_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.1
# AI_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# AI_VECTOR_DB_PATH=./chroma_db

# Google Gemini API (FREE - for document processing with vision)
# Get your free API key from: https://makersuite.google.com/app/apikey
# GOOGLE_GEMINI_API_KEY=your_api_key_here
